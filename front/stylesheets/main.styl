@import "fonts.import.styl"

body 
  background-color black 
  overflow hidden
  color white
  font-family VT323
  border 0px
  h1
    font-size 100px
    font-weight 300
    text-align center
  p
    font-size 40px
    text-align center
  a
    color red
    text-decoration none
  div
    height 100%
  .startBox
    margin-top 0%
.copy
  color #00FF00;
.blink
  animation: blinker 1s linear infinite

canvas
  top 0px
  left 0px

.hud
  z-index 1
  position absolute
  left 10px
  width 640px
  height 132px
  background url(/static/img/hud-bg.png) no-repeat center center
  *
    position absolute
    margin 0px
  .watch
    font-family 'DS-Digital'
    font-size 30px
    text-align center
    color #ff6262
    top 27px
    left 518px
    width 100px
    height 38px
    line-height 38px
    span
      display inline-block
      width 14px
      text-align right
      position  initial
  .level
    font-family 'DS-Digital'
    font-size 30px
    text-align center
    color #ff6262
    top 77px
    left 518px
    width 100px
    height 38px
    line-height 38px
  .levels
    left 151px
    height 7px
    width 338px
    span
      position absolute
      top 0px
      left 0px
      height 100%
    &.sleep
      top 36px
      span
        background-image url(/static/img/hud-bar-sleep.png)
    &.bile
      top 66px
      span
        background-image url(/static/img/hud-bar-bilis.png)
    &.alcohol
      top 96px
      span
        background-image url(/static/img/hud-bar-alcohol.png)

@keyframes blinker {
  50% { opacity: 0; }
}